<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">



<struts-config>

    <form-beans>
        <form-bean
            name="relacaoForm"
            type="com.mobi.relacao.form.RelacaoForm"/>
    </form-beans>


    <action-mappings>
            
		<action path="/ajaxAddRelacao" type="com.mobi.comum.action.DiagramaAction" 
				name="relacaoForm" parameter="addRelacoes" scope="session">
		</action>
		
		<action path="/ajaxDiagrama" type="com.mobi.comum.action.DiagramaAction" 
				name="relacaoForm" parameter="salvarRelacoes" scope="session">
			<forward name="success" path="/pages/ajaxDiagrama.jsp"/>
		</action>
		
		<action path="/gerarArquivoOWL" type="com.mobi.comum.action.DiagramaAction" 
				name="relacaoForm" parameter="gerarArquivoOWL" scope="session">
		</action>
		
		<action path="/modelagem" type="com.mobi.comum.action.DiagramaAction" 
				name="relacaoForm" scope="session" parameter="visualizarRelacoes">
			<forward name="success" path="/pages/editorMobi.jsp"/>
		</action>
		
		<action path="/ajaxAddInstancia" type="com.mobi.comum.action.AddInstanceAction" 
				name="relacaoForm" scope="session">
		</action>
		
		<action path="/ajaxEditarInstancia" type="com.mobi.comum.action.EditarInstanciaAction" 
				name="relacaoForm" scope="session">
		</action>
		
		<action path="/ajaxListarRelacoes" type="com.mobi.comum.action.DiagramaAction" 
				name="relacaoForm" scope="session" parameter="listarRelacoes">
				<forward name="success" path="/pages/listarRelacoes.jsp"/>
		</action>
		
		<action path="/ajaxCarregarRelacao" type="com.mobi.comum.action.DiagramaAction" 
				name="relacaoForm" scope="session" parameter="carregarRelacao">
				<forward name="success" path="/pages/ajaxCarregarRelacao.jsp"/>
		</action>
		
		<action path="/ajaxBuscarInstancia" type="com.mobi.comum.action.DiagramaAction" 
				name="relacaoForm" scope="session" parameter="atualizarInstancias">
				<forward name="success" path="/pages/ajaxCarregarRelacao.jsp"/>
		</action>
		
		<action path="/ajaxEliminarRelacionamento" type="com.mobi.comum.action.DiagramaAction" 
				name="relacaoForm" scope="session" parameter="eliminarRelacionamento" >
		</action>
		
		<action path="/ajaxEliminarInstancia" type="com.mobi.comum.action.DiagramaAction" 
				name="relacaoForm" scope="session" parameter="eliminarInstancia" >
		</action>
		
		<action path="/atualizarNomeClasse" type="com.mobi.comum.action.DiagramaAction"
				name="relacaoForm" scope="session" parameter="atualizarNomeClasse">
				<forward name="success" path="/pages/ajaxDiagrama.jsp"/>
		</action>
		
    </action-mappings>



    <message-resources parameter="MessageResources" />


  <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
    <set-property
        property="pathnames"
        value="/org/apache/struts/validator/validator-rules.xml,
               /WEB-INF/validation.xml"/>
  </plug-in>

</struts-config>

